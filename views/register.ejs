<%- include('partials/header') %>

<body id="register">
  <section class="container-fluid colored-section pb-5">
    <%- include("partials/navbar-loggedOut") %>

    <div class="container mt-3">
      <div class="col-sm-6 mx-auto">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /register route -->
            <form action="/register" method="POST">
              <div class="form-group">
                <input type="email" class="form-control" name="username" placeholder="Email">
              </div>
              <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-dark">Register</button>
            </form>

          </div>
        </div>
        <div class="card flex-row social-block">
          <div class="card-body col-sm-6">
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Google
            </a>
          </div>
          <div class="card-body col-sm-6">
            <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
              <i class="fab fa-facebook"></i>
              Facebook
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Footer -->

  <footer id="footer" class="white-section">
    <div class="container-fluid">
      <i class="fab fa-twitter contact-icon"></i>
      <i class="fab fa-facebook contact-icon"></i>
      <i class="fab fa-instagram contact-icon"></i>
      <i class="fas fa-envelope contact-icon"></i>
      <p class="copyright">Â© Copyright 2019 Attending</p>
    </div>
  </footer>

  <%- include('partials/footer') %>
